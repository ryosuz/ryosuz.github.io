---
const navItems = [
	{ label: "Top", href: "#top" },
	{ label: "About", href: "#about" },
	{ label: "スキル", href: "#skills" },
	{ label: "実績", href: "#works" },
	{ label: "経歴", href: "#experience" },
	{ label: "お問い合わせ", href: "#contact" },
]
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-cosmic-latte/80 backdrop-blur-sm border-b border-border"
>
  <nav class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img
        src={`${import.meta.env.PUBLIC_BUCKET_URL}/icon2.webp`}
        alt="Portfolio"
        class="w-8 h-8 rounded-full object-cover"
      />
      <span class="text-xl font-semibold text-ink! tracking-tight hidden md:block">
        RYOSUZ LAB
      </span>
    </a>
    <ul class="hidden md:flex items-center gap-8">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-sm text-ink-light hover:text-ink transition-colors duration-200"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
    <a
      href={import.meta.env.PUBLIC_GITHUB_URL}
      class="hidden md:inline-flex w-10 h-10 items-center justify-center rounded-full border border-border text-ink-light hover:text-ink hover:border-ink transition-colors"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="GitHubプロフィール"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="inline-block"
      >
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M12 .5C5.649.5.5 5.648.5 12c0 5.092 3.292 9.403 7.863 10.94.575.108.785-.249.785-.553 0-.272-.01-1.149-.016-2.086-3.2.695-3.877-1.356-3.877-1.356-.523-1.329-1.277-1.684-1.277-1.684-1.044-.714.079-.699.079-.699 1.155.081 1.764 1.187 1.764 1.187 1.026 1.757 2.691 1.249 3.348.956.104-.744.401-1.25.73-1.538-2.555-.291-5.244-1.278-5.244-5.687 0-1.257.45-2.285 1.188-3.09-.12-.29-.515-1.458.113-3.04 0 0 .968-.31 3.172 1.18a11.022 11.022 0 0 1 5.776 0c2.204-1.49 3.17-1.18 3.17-1.18.63 1.582.235 2.75.116 3.04.74.805 1.186 1.833 1.186 3.09 0 4.42-2.694 5.392-5.258 5.676.413.356.782 1.057.782 2.131 0 1.539-.014 2.78-.014 3.157 0 .306.207.665.79.552C20.21 21.398 23.5 17.089 23.5 12 23.5 5.648 18.352.5 12 .5Z"
        />
      </svg>
    </a>
    <button
      id="menu-toggle"
      class="md:hidden p-2 text-ink"
      aria-label="メニューを開く"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-cosmic-latte border-b border-border"
  >
    <ul class="px-6 py-4 space-y-4">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block text-ink-light hover:text-ink transition-colors duration-200"
            >
              {item.label}
            </a>
          </li>
        ))
      }
      <li>
        <a
          href={import.meta.env.PUBLIC_GITHUB_URL}
          class="inline-flex items-center gap-2 text-ink-light hover:text-ink transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M12 .5C5.649.5.5 5.648.5 12c0 5.092 3.292 9.403 7.863 10.94.575.108.785-.249.785-.553 0-.272-.01-1.149-.016-2.086-3.2.695-3.877-1.356-3.877-1.356-.523-1.329-1.277-1.684-1.277-1.684-1.044-.714.079-.699.079-.699 1.155.081 1.764 1.187 1.764 1.187 1.026 1.757 2.691 1.249 3.348.956.104-.744.401-1.25.73-1.538-2.555-.291-5.244-1.278-5.244-5.687 0-1.257.45-2.285 1.188-3.09-.12-.29-.515-1.458.113-3.04 0 0 .968-.31 3.172 1.18a11.022 11.022 0 0 1 5.776 0c2.204-1.49 3.17-1.18 3.17-1.18.63 1.582.235 2.75.116 3.04.74.805 1.186 1.833 1.186 3.09 0 4.42-2.694 5.392-5.258 5.676.413.356.782 1.057.782 2.131 0 1.539-.014 2.78-.014 3.157 0 .306.207.665.79.552C20.21 21.398 23.5 17.089 23.5 12 23.5 5.648 18.352.5 12 .5Z"
            />
          </svg>
          GitHub
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  menuToggle?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  // Close menu when clicking on a link
  mobileMenu?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu.classList.add("hidden");
    });
  });
</script>
