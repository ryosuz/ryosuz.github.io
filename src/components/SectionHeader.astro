---
export interface Props {
  title: string;
  description?: string;
  align?: 'left' | 'center';
}

const {
  title,
  description,
  align = 'left',
} = Astro.props;

const containerClass = align === 'center'
  ? 'text-center'
  : '';

const titleMb = description ? 'mb-4' : 'mb-12';
---

<div class={containerClass}>
  <h2 class={`text-3xl font-bold text-ink ${titleMb}`}>{title}</h2>
  {description && <p class="text-ink-light mb-12">{description}</p>}
</div>
