---
const backgroundImg = `${import.meta.env.PUBLIC_BUCKET_URL}/hero.webp`
---

<section id="'top" class="min-h-screen flex items-center justify-center pt-16 relative overflow-hidden scroll-mt-24 md:scroll-mt-32">
  <!-- 背景画像 -->
  <div class="absolute right-4 md:right-20 lg:right-60 top-1/2 -translate-y-1/2 w-[300px] h-[300px] md:w-[500px] md:h-[500px] pointer-events-none">
    <div
      class="w-full h-full bg-contain bg-center bg-no-repeat animate-fade-blur-in opacity-0"
      style={`background-image: url(${backgroundImg}); mask-image: radial-gradient(closest-side, black 60%, transparent 100%); -webkit-mask-image: radial-gradient(closest-side, black 60%, transparent 100%);`}
    ></div>
  </div>

  <div class="max-w-5xl mx-auto px-6 py-20 relative z-10 w-full">
    <div class="space-y-6">
      <p class="text-ink-muted text-sm tracking-widest uppercase">
        Frontend Engineer
      </p>
      <h1 class="text-5xl md:text-7xl font-bold text-ink leading-tight">
        <span class="text-ink-light">RYOSUZ LAB</span>
      </h1>
      <p class="text-ink-muted text-lg max-w-xl leading-relaxed">
        Ryosuz's portfolio
      </p>
    </div>
  </div>

  <!-- 下矢印 -->
  <a
    href="#about"
    class="absolute bottom-8 left-1/2 -translate-x-1/2 text-ink-muted hover:text-ink transition-colors"
    aria-label="About this pageへスクロール"
  >
    <svg
      class="w-8 h-8 animate-bounce"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"
      />
    </svg>
  </a>
</section>

<style>
  @keyframes fade-blur-in {
    0% {
      opacity: 0;
      filter: blur(20px);
      transform: scale(0.8);
    }
    100% {
      opacity: 0.2;
      filter: blur(0);
      transform: scale(1);
    }
  }

  .animate-fade-blur-in {
    animation: fade-blur-in 0.5s ease-out forwards;
  }
</style>
