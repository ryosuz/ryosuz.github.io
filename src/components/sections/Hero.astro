---
import { BUCKET_URL } from "@/constants/social";
import ScrollButton from "../ui/scroll-button";
---

<section
  id="home"
  class="min-h-screen flex items-center justify-center relative overflow-hidden bg-teal-500 scroll-mt-16"
>
  <div class="absolute inset-0 bg-linear-to-br from-teal-400 via-teal-500 to-teal-600"></div>

  <div class="relative z-10 text-center px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl lg:text-8xl font-black text-white mb-6 drop-shadow-lg">
        <span>RYOSUZ LAB!</span>
      </h1>

      <p class="text-xl md:text-2xl text-white/90 mb-8 leading-relaxed drop-shadow-md font-medium">
        Ryosuz engineer portfolio
      </p>

      <div class="mb-8">
        <img
          src={`${BUCKET_URL}/main.webp`}
          alt="Main visual"
          width={800}
          height={400}
          class="mx-auto rounded-lg shadow-2xl max-h-80 w-auto object-contain"
        />
      </div>
    </div>
  </div>

  <ScrollButton client:load />
</section>
